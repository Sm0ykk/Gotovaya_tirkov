<Page x:Class="WpfApp4.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Login:" Margin="0,0,0,10"/>
            <TextBox x:Name="LoginTextBox" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Password:" Margin="0,0,0,10"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="0,0,0,10"/>
            <Button Content="Client" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
